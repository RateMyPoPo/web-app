
@{
    ViewBag.Title = "Incidents";
}

<h2>Recorded Incidents</h2>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    @{
        foreach (var item in @ViewBag.Incidents)
        {
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span2">
                        <p>Timestamp: @item.timestamp</p>
                        <p>Dropbox Link: <a src=@item.dropBoxURL>@item.dropBoxURL</a></p>
                        <p>Geolocation: @item.longitute @item.latitude</p>
                        @{
                            string source = "https://www.google.com/maps/embed/v1/place?q=" + @item.latitude + "%2C" + @item.longitute + "&key=AIzaSyBVCUer4s4RHKzPOUYTSGmRuUunqnV38IQ";
                        }

                        <iframe width="600" height="250" frameborder="0" style="border:0" src=@source allowfullscreen></iframe>
                    </div>
                    <div class="span10">
                        <p>other content</p>
                    </div>
                </div>
            </div> <br />
        }

    }