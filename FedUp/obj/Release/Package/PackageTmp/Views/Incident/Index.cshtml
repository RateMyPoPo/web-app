
@{
    ViewBag.Title = "Incidents";
}

<h2>Recorded Incidents</h2>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    @{
        int count=0;
        foreach (var item in @ViewBag.Incidents)
        {
            count++;
            <div class="container-fluid">
                <h3>Case #@count</h3>
                <div class="row-fluid">
                    <div class="span2">
                        <p>Timestamp: @item.newTimeStamp</p>
                        <p>Dropbox Link: <a src=@item.file_name>@item.file_name</a></p>
                        <p>Geolocation: @item.longitude @item.latitude</p>
                        <p>Audio Recording:</p>
                        <p><a href="@item.file_name" download>Download Audio</a></p>
                        <audio controls>
                            <source src="@item.file_name" type="audio/mp3">
                        </audio><br />
                        @{
                            string source = "https://www.google.com/maps/embed/v1/place?q=" + @item.latitude + "%2C" + @item.longitude + "&key=AIzaSyBVCUer4s4RHKzPOUYTSGmRuUunqnV38IQ";
                        }
                        <iframe width="600" height="250" frameborder="0" style="border:0" src=@source allowfullscreen></iframe>
                    </div>
                </div>
            </div> <br /> <br />
        }

    }